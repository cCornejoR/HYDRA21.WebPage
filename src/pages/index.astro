---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Documentation from '../components/Documentation.astro';
import CallToAction from '../components/CallToAction.astro';
import Footer from '../components/Footer.astro';
import ViewportAnimator from '../components/ViewportAnimator.astro';
import WelcomeModal from '../components/WelcomeModal.jsx';
import '../styles/global.css';
---

<Layout title="HYDRA²¹ - Software de Ingeniería Hidráulica">
  <Header />

  <ViewportAnimator animation="fade-in" duration={200}>
    <Hero />
  </ViewportAnimator>

  <ViewportAnimator animation="fade-in" delay={50} duration={200}>
    <Features />
  </ViewportAnimator>

  <ViewportAnimator animation="fade-in" delay={100} duration={200}>
    <Documentation />
  </ViewportAnimator>

  <ViewportAnimator animation="fade-in" delay={150} duration={200}>
    <CallToAction />
  </ViewportAnimator>

  <Footer />

  <!-- Modal de bienvenida -->
  <WelcomeModal client:load />
</Layout>

<style>
  /* Custom animations and enhancements */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .shadow-3xl {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
  }
  
  /* Enhanced hover effects */
  .group:hover .drop-shadow-lg {
    filter: drop-shadow(0 25px 25px rgba(14, 165, 233, 0.4));
  }
</style>
