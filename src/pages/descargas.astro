---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProtectedDownload from '../components/ProtectedDownload.jsx';
import PasswordModal from '../components/PasswordModal.jsx';

const title = "Descargas - HYDRA²¹";
const description = "Descarga HYDRA²¹ - Software de Ingeniería Hidráulica de vanguardia. Versiones actuales, requisitos del sistema, documentación y soporte técnico.";
---

<Layout title={title} description={description}>
  <Header />
  
  <!-- Downloads Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-black" style="min-height: 100vh; min-height: 100svh;">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-black downloads-background">
      <div class="absolute inset-0 bg-black/40 xs:bg-black/30 sm:bg-black/25 md:bg-black/20 lg:bg-black/30"></div>
    </div>
    
    <!-- Top blur transition -->
    <div class="absolute top-0 left-0 right-0 h-20 sm:h-24 md:h-32 lg:h-40 bg-gradient-to-b from-black via-black/80 to-transparent z-20"></div>
    
