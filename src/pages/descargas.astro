          <!-- Main Heading - Following Hero responsive patterns -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight" transition:name="downloads-hero-title">
            Descarga<br/>
            <span class="block text-blue-400" transition:name="logo-text">HYDRA²¹</span>
          </h1>

