---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProtectedDownload from '../components/ProtectedDownload.jsx';
import PasswordModal from '../components/PasswordModal.jsx';

const title = "Descargas - HYDRA²¹";
const description = "Descarga HYDRA²¹ - Software de Ingeniería Hidráulica de vanguardia. Versiones actuales, requisitos del sistema, documentación y soporte técnico.";
---

<Layout title={title} description={description}>
  <Header />
  
  <!-- Downloads Hero Section -->
  <section class="downloads-section relative min-h-screen flex items-center overflow-hidden bg-black" style="min-height: 100vh; min-height: 100svh;">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-black downloads-background">
      <div class="absolute inset-0 bg-black/40 xs:bg-black/30 sm:bg-black/25 md:bg-black/20 lg:bg-black/30"></div>
    </div>
    
    <!-- Top blur transition -->
    <div class="absolute top-0 left-0 right-0 h-20 sm:h-24 md:h-32 lg:h-40 bg-gradient-to-b from-black via-black/80 to-transparent z-20"></div>
    
    <!-- Bottom blur transition -->
    <div class="absolute bottom-0 left-0 right-0 h-20 sm:h-24 md:h-32 lg:h-40 bg-gradient-to-t from-black via-black/80 to-transparent z-20"></div>
  

    <!-- Main content container following Hero patterns -->
    <div class="container mx-auto px-4 py-6 md:py-12 lg:py-16 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center justify-items-center lg:justify-items-stretch">

        <!-- Left side - Content - Following Hero spacing patterns -->
        <div class="space-y-4 md:space-y-6 lg:space-y-8 w-full lg:w-auto text-center lg:text-left px-4 lg:px-8">

          <!-- Badge: #DESCARGA HYDRA²¹ -->
          <div class="inline-flex items-center gap-1 sm:gap-2 bg-gray-900/90 backdrop-blur-sm border border-blue-500/30 rounded-full px-2 py-1 text-xs sm:text-sm">
            <!-- Download SVG -->
            <svg class="w-3 h-3 sm:w-4 sm:h-4 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-13.051-1.351"/>
            </svg>
            <span class="text-blue-400 font-medium text-xs sm:text-xs">#DESCARGA HYDRA²¹</span>
          </div>

          <!-- Main Heading - Following Hero responsive patterns -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight" transition:name="downloads-hero-title">
            Descarga<br/>
            <span class="block text-blue-400" transition:name="logo-text">HYDRA²¹</span>
          </h1>

          <!-- Subtitle - Following Hero responsive patterns -->
          <p class="text-lg sm:text-xl lg:text-2xl text-gray-300 leading-relaxed max-w-2xl mx-auto lg:mx-0">
            Software de ingeniería hidráulica<br class="hidden sm:block"/>
            de última generación.
          </p>

          <!-- Badges Container -->
          <div class="flex flex-col gap-3 items-center lg:items-start lg:justify-start">
            <!-- Windows Only Notice -->
            <div class="inline-flex items-center gap-2 bg-orange-600/20 backdrop-blur-sm border border-orange-500/40 rounded-2xl px-3 py-2 text-xs sm:text-sm">
              <!-- Windows Logo SVG -->
              <svg class="w-4 h-4 text-orange-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-13.051-1.351"/>
              </svg>
              <span class="text-orange-400 font-semibold">SOLO WINDOWS</span>
              <span class="bg-orange-500/20 text-orange-300 text-xs px-2 py-1 rounded-full">TEMPORAL</span>
            </div>

            <!-- Version Badge -->
            <div class="inline-flex items-center gap-2 bg-blue-600/20 backdrop-blur-sm border border-blue-500/40 rounded-2xl px-3 py-2 text-xs sm:text-sm">
              <span class="text-blue-400 font-semibold">VERSIÓN:</span>
              <span class="text-white font-bold">v2025.1 ALPHA</span>
              <span class="bg-green-500/20 text-green-400 text-xs px-2 py-1 rounded-full">NUEVO</span>
            </div>
          </div>

          <!-- Botones CTA (apilados <768px, lado a lado ≥768px) - Following Hero button patterns -->
          <div class="pt-4 md:pt-6 btn-group">
            <a
              href="#download-section"
              class="btn-secondary"
            >
              <!-- Windows Logo SVG -->
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-13.051-1.351"/>
              </svg>
              Descargar para Windows
            </a>
            <a
              href="#system-requirements"
              class="btn-secondary"
            >
              <!-- Tool SVG -->
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              Requisitos del Sistema
            </a>
          </div>

        </div>

        <!-- Right side - Download Image (solo ≥768px) - Following Hero responsive patterns -->
        <div class="hidden md:flex w-full lg:w-auto relative justify-center lg:justify-end items-center">
          <div class="relative w-80 h-80 md:w-96 md:h-96 lg:w-[28rem] lg:h-[28rem] xl:w-[32rem] xl:h-[32rem] 2xl:w-[36rem] 2xl:h-[36rem] flex items-center justify-center">

            <!-- Download Animation Overlay -->
            <div class="absolute inset-0 pointer-events-none z-10">
              <!-- Progress Indicator -->
              <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 w-3/4 max-w-xs">
                <div class="bg-gray-800/50 backdrop-blur-sm rounded-full h-2 overflow-hidden">
                  <div class="download-progress bg-gradient-to-r from-blue-500 to-cyan-400 h-full rounded-full"></div>
                </div>
                <div class="text-center mt-2">
                  <span class="text-xs text-blue-400/80 font-medium download-percentage">0%</span>
                </div>
              </div>

              <!-- Particle Effects -->
              <div class="download-particles absolute inset-0">
                <div class="particle particle-1"></div>
                <div class="particle particle-2"></div>
                <div class="particle particle-3"></div>
                <div class="particle particle-4"></div>
                <div class="particle particle-5"></div>
                <div class="particle particle-6"></div>
              </div>
            </div>

            <!-- Main download image -->
            <div class="relative z-5">
              <img
                src="/assets/images/download.png"
                alt="Descarga HYDRA²¹"
                class="w-full h-auto animate-float-gentle filter drop-shadow-2xl translate-x-6"
                transition:name="downloads-hero-image"
                loading="eager"
                decoding="async"
              />
            </div>

            <!-- Subtle glow effect -->
            <div class="absolute inset-0 bg-blue-500/10 rounded-2xl blur-3xl scale-110 opacity-50"></div>
          </div>
        </div>

      </div>
    </div>
  </section>
  <!-- Software Versions Section -->
  <section id="download-section" class="content-section-background bg-black py-12 sm:py-16 md:py-20 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        
