---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProtectedDownload from '../components/ProtectedDownload.jsx';
import PasswordModal from '../components/PasswordModal.jsx';

const title = "Descargas - HYDRA²¹";
const description = "Descarga HYDRA²¹ - Software de Ingeniería Hidráulica de vanguardia. Versiones actuales, requisitos del sistema, documentación y soporte técnico.";
