              <!-- Content that disappears on hover -->
              <div class="relative z-10 space-y-6 group-hover:opacity-0 transition-opacity duration-500">
                <!-- Header -->
                <div class="text-center">
                  <h3 class="text-2xl sm:text-3xl font-bold text-white mb-2">PDF Compressor</h3>
                  <div class="inline-flex items-center gap-2 bg-green-600/20 backdrop-blur-sm border border-green-500/40 rounded-full px-3 py-1">
                    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                    <span class="text-green-400 text-xs font-semibold">BETA - GHOSTSCRIPT</span>
                  </div>
