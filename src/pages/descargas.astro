        <!-- Version Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-8 lg:gap-10">
          
          <!-- Current Version Card -->
          <div class="group relative">
            <div class="relative h-full border-2 border-[rgba(14,165,233,0.4)] rounded-3xl bg-gradient-to-br from-[rgba(14,165,233,0.2)] via-[rgba(59,130,246,0.15)] to-[rgba(14,165,233,0.1)] backdrop-blur-xl p-4 sm:p-6 md:p-8 transition-all duration-500 hover:border-[rgba(14,165,233,0.7)] hover:shadow-2xl hover:shadow-blue-500/25 hover:scale-105">

              <!-- Background Image (Hidden by default, shown on hover) -->
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-0 rounded-3xl overflow-hidden">
                <img src="/assets/images/main_sotfware.png" alt="HYDRA²¹ Main Software" class="w-full h-full object-cover filter group-hover:brightness-110 group-hover:contrast-110" />
                <div class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-colors duration-700"></div>
              </div>

              <!-- Glassmorphism overlay -->
              <div class="absolute inset-0 bg-gradient-to-br from-white/8 to-transparent rounded-3xl"></div>

              <!-- Featured Badge -->
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 group-hover:opacity-0 transition-opacity duration-500">
                <div class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white text-sm font-bold px-4 py-2 rounded-full">
                  RECOMENDADO
                </div>
              </div>

              <!-- Content that disappears on hover -->
              <div class="relative z-10 space-y-6 group-hover:opacity-0 transition-opacity duration-500">
                <!-- Version Info -->
                <div class="text-center">
                  <h3 class="text-2xl sm:text-3xl font-bold text-white mb-2">HYDRA²¹ v2025.1</h3>
                  <div class="inline-flex items-center gap-2 bg-green-500/20 text-green-400 text-sm px-3 py-1 rounded-full mb-4">
                    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                    ALPHA - PRIMERA VERSIÓN
                  </div>
                </div>

                <!-- Features List -->
                <div class="space-y-3">
                  <div class="flex items-center gap-3 text-gray-300">
                    <span class="text-blue-400">✓</span>
                    <span class="text-sm sm:text-base">Interfaz moderna completamente rediseñada</span>
                  </div>
                  <div class="flex items-center gap-3 text-gray-300">
                    <span class="text-blue-400">✓</span>
                    <span class="text-sm sm:text-base">Generación de mallas avanzada</span>
