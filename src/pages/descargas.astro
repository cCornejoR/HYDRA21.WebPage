<script>
  // @ts-nocheck
  // Download Animation Controller
  (function() {
    'use strict';

    // Download Animation Controller
    function DownloadAnimationController() {
      this.percentageElement = null;
      this.animationInterval = null;
      this.currentPercentage = 0;
      this.targetPercentage = 100;
      this.animationDuration = 8000; // 8 seconds to match CSS animation
      this.init();
    }

    DownloadAnimationController.prototype.init = function() {
      // Wait for DOM to be ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => this.setupAnimation());
      } else {
        this.setupAnimation();
      }
    };

    DownloadAnimationController.prototype.setupAnimation = function() {
      this.percentageElement = document.querySelector('.download-percentage');

      if (!this.percentageElement) return;

      // Check if user prefers reduced motion
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      if (prefersReducedMotion) {
        // Show static percentage for accessibility
        this.percentageElement.textContent = '75%';
        return;
      }

      // Start the percentage animation
      this.startPercentageAnimation();
    };

    DownloadAnimationController.prototype.startPercentageAnimation = function() {
      const self = this;
      const startTime = Date.now();
      const updateInterval = 100; // Update every 100ms for smooth animation

      this.animationInterval = setInterval(function() {
        const elapsed = Date.now() - startTime;
        const progress = Math.min(elapsed / self.animationDuration, 1);

        // Use easing function for more natural progression
        const easedProgress = self.easeInOutCubic(progress);
        self.currentPercentage = Math.floor(easedProgress * self.targetPercentage);

        if (self.percentageElement) {
          self.percentageElement.textContent = self.currentPercentage + '%';
        }

        // Reset animation when complete
        if (progress >= 1) {
          setTimeout(function() {
            self.currentPercentage = 0;
            self.startPercentageAnimation();
          }, 2000); // 2 second pause before restart

          clearInterval(self.animationInterval);
        }
      }, updateInterval);
    };

    // Easing function for smooth animation
    DownloadAnimationController.prototype.easeInOutCubic = function(t) {
      return t < 0.5 ? 4 * t * t * t : (t - 1) * (2 * t - 2) * (2 * t - 2) + 1;
    };

    // Cleanup method
    DownloadAnimationController.prototype.destroy = function() {
      if (this.animationInterval) {
        clearInterval(this.animationInterval);
      }
    };

    // Enhanced floating animation for mobile devices
    function initMobileFloatingImage() {
      const downloadImage = document.querySelector('[transition\\:name="downloads-hero-image"]');

      if (!downloadImage) return;

      // Add enhanced floating effect on mobile
      if (window.innerWidth < 768) {
        const imgElement = downloadImage;
        if (imgElement && imgElement.style) {
          imgElement.style.animation = 'float-gentle 6s ease-in-out infinite';
        }
      }
    }

    // Enhanced particle effects
    function initParticleEffects() {
      const particleContainer = document.querySelector('.download-particles');
      if (!particleContainer) return;

      // Check if user prefers reduced motion
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReducedMotion) return;

      // Add random particle generation
      setInterval(() => {
        if (Math.random() > 0.7) { // 30% chance every interval
          createRandomParticle();
        }
      }, 1000);

      function createRandomParticle() {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = '100%';
        particle.style.animationDelay = '0s';
        particle.style.animationDuration = (2 + Math.random() * 3) + 's';

        particleContainer.appendChild(particle);

        // Remove particle after animation
        setTimeout(() => {
          if (particle.parentNode) {
            particle.parentNode.removeChild(particle);
          }
        }, 5000);
      }
    }

    // Initialize the download animation
    const downloadAnimation = new DownloadAnimationController();

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        initMobileFloatingImage();
        initParticleEffects();
      });
    } else {
      initMobileFloatingImage();
      initParticleEffects();
    }

    // Cleanup on page unload
    window.addEventListener('beforeunload', function() {
      downloadAnimation.destroy();
    });

    // Re-initialize on resize
    window.addEventListener('resize', initMobileFloatingImage);
  })();
