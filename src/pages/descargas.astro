                  downloadUrl="https://github.com/cCornejoR/HYDRA21/releases/download/v2025.1-alpha/HYDRA21-v2025.1-alpha-Setup.exe" 
                  className="cursor-pointer w-full"
                  client:load
                >
                  <div class="btn-modern-download-primary w-full">
                    <!-- Windows Logo SVG -->
                    <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-13.051-1.351"/>
                    </svg>
                    <span>Descargar</span>
                  </div>
                </ProtectedDownload>
              </div>
            </div>
          </div>
          
          <!-- PaperExtension Card -->
          <div class="group relative">
            <div class="relative h-full border-2 border-[rgba(139,92,246,0.3)] rounded-3xl bg-gradient-to-br from-[rgba(139,92,246,0.15)] via-[rgba(59,130,246,0.1)] to-[rgba(139,92,246,0.05)] backdrop-blur-xl p-4 sm:p-6 md:p-8 transition-all duration-500 hover:border-[rgba(139,92,246,0.6)] hover:shadow-2xl hover:shadow-purple-500/20 hover:scale-105">

              <!-- Background Image (Hidden by default, shown on hover) -->
