---
// Brand New Modern Hero Section for HYDRA²¹
import ViewportAnimator from './ViewportAnimator.astro';
---

<!-- ————————————————————————————————————————
  Brand New Modern Hero Section for HYDRA²¹
  Optimizado para Desktop, Tablets, Móviles (≥400px y <400px)
———————————————————————————————————————— -->

<section id="inicio" class="hero-section relative min-h-screen flex items-center overflow-hidden">

  <!-- 1) FONDO OSCURO + OVERLAY SEMITRANSPARENTE -->
  <div class="absolute inset-0 bg-black hero-background">
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- 2) TORUS (MÓVIL <768px) -->
  <div class="mobile-torus-background md:hidden absolute inset-0 pointer-events-none">
    <div class="torus-floating absolute">
      <img
        src="/assets/images/torus_2.png"
        alt="Floating Torus"
        class="torus-image"
        loading="lazy"
        decoding="async"
      />
    </div>
  </div>

  <!-- 3) CONTENIDO PRINCIPAL (z-index 10 para que quede por encima del torus) -->
  <div class="container mx-auto px-4 py-6 md:py-12 lg:py-16 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center justify-items-center lg:justify-items-stretch">
      
      <!-- 3.1) IZQUIERDA: Badge + Título + Subtítulo + Estadísticas + Botones -->
      <ViewportAnimator animation="slide-up" delay={0} duration={800}>
      <div class="space-y-4 md:space-y-6 lg:space-y-8 w-full lg:w-auto text-center lg:text-left">
        
        <!-- Badge: #SOFTWARE HIDRÁULICO -->
        <div class="inline-flex items-center gap-1 sm:gap-2 bg-gray-900/90 backdrop-blur-sm border border-blue-500/30 rounded-full px-2 py-1 text-xs sm:text-sm">
          <span class="text-orange-400 text-xs sm:text-sm">⚡</span>
          <span class="text-blue-400 font-medium text-xs sm:text-xs">#SOFTWARE HIDRÁULICO</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
          Diseña y analiza,<br/>
          <span class="block text-blue-400">haz ingeniería de</span>
          <span class="block text-blue-300">forma fácil</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-gray-300 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Donde los Desafíos de Ingeniería<br class="hidden sm:block"/>
          Encuentran Soluciones Innovadoras.
        </p>

        <!-- Estadísticas con líneas decorativas -->
        <div class="pt-6 pb-4">
          <!-- Línea superior -->
          <div class="w-full h-px bg-gradient-to-r from-transparent via-blue-500/30 to-transparent mb-4"></div>

          <!-- Estadísticas (1 columna <768px, 3 columnas ≥768px) -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-2 md:gap-4">
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-blue-400">99.7%</div>
              <div class="text-sm text-gray-400 uppercase tracking-wider">PRECISIÓN</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-blue-400">50x</div>
              <div class="text-sm text-gray-400 uppercase tracking-wider">MÁS RÁPIDO</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-blue-400">ISO</div>
              <div class="text-sm text-gray-400 uppercase tracking-wider">CERTIFICADO</div>
            </div>
          </div>

          <!-- Línea inferior -->
          <div class="w-full h-px bg-gradient-to-r from-transparent via-cyan-500/30 to-transparent mt-4"></div>
        </div>

        <!-- Botones CTA (apilados <768px, lado a lado ≥768px) -->
        <div class="pt-4 md:pt-6 btn-group">
          <a
            href="/descargas"
            class="btn-primary"
          >
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor">
              <rect x="69.824" y="58.512" width="372.352" height="253.792"/>
              <rect x="85.824" y="74.512" fill="#999999" width="340.352" height="221.792"/>
              <polygon fill="#D6D6D6" points="442.176,312.304 69.824,312.304 0,437.488 512,437.488 "/>
              <rect x="100.848" y="341.28" fill="#AFAFAF" width="314.192" height="16"/>
              <rect y="437.488" width="512" height="16"/>
              <rect x="220.656" y="376.512" fill="#AFAFAF" width="74.56" height="16"/>
              <polygon fill="#FFFFFF" points="256,259.856 215.408,205.312 228.256,195.744 256,233.04 283.744,195.744 296.592,205.312"/>
              <rect x="248" y="110.992" fill="#FFFFFF" width="16" height="135.472"/>
            </svg>
            <span>Descargar HYDRA²¹</span>
          </a>
          <a
            href="#caracteristicas"
            class="btn-secondary"
          >
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
            Ver Características
          </a>
        </div>

      </div>
      </ViewportAnimator>

      <!-- 3.2) DERECHA: Bloque de cubos compacto (solo ≥768px) -->
      <ViewportAnimator animation="fade-in" delay={200} duration={300}>
      <div class="hidden md:flex w-full lg:w-auto relative justify-center lg:justify-end items-center">
        <div class="shapes-cluster-compact relative w-80 h-80 md:w-96 md:h-96 lg:w-[28rem] lg:h-[28rem] xl:w-[32rem] xl:h-[32rem] 2xl:w-[36rem] 2xl:h-[36rem] flex items-center justify-center">

          <!-- Cubo central (principal) -->
          <div class="absolute cube-cluster-central top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 animate-float-2 z-30">
            <img
              src="/assets/images/cube_2.png"
              alt="3D Cube Central"
              class="w-32 h-32 md:w-40 md:h-40 lg:w-52 lg:h-52 xl:w-64 xl:h-64 2xl:w-72 2xl:h-72 cube-blue-1"
              loading="eager"
              decoding="async"
            />
          </div>

          <!-- Cubo superior izquierdo (más cerca) -->
          <div class="absolute cube-cluster-top-left top-[35%] left-[35%] transform -translate-x-1/2 -translate-y-1/2 animate-float-3 z-20">
            <img
              src="/assets/images/cube_2.png"
              alt="3D Cube"
              class="w-24 h-24 md:w-28 md:h-28 lg:w-36 lg:h-36 xl:w-44 xl:h-44 2xl:w-52 2xl:h-52 cube-blue-2"
              loading="lazy"
              decoding="async"
            />
          </div>

          <!-- Cubo inferior derecho (más cerca) -->
          <div class="absolute cube-cluster-bottom-right top-[65%] left-[65%] transform -translate-x-1/2 -translate-y-1/2 animate-float-4 z-20">
            <img
              src="/assets/images/cube_2.png"
              alt="3D Cube"
              class="w-20 h-20 md:w-24 md:h-24 lg:w-32 lg:h-32 xl:w-36 xl:h-36 2xl:w-44 2xl:h-44 cube-blue-3"
              loading="lazy"
              decoding="async"
            />
          </div>

          <!-- Cubo superior derecho (acento) -->
          <div class="absolute cube-cluster-top-right top-[30%] left-[70%] transform -translate-x-1/2 -translate-y-1/2 animate-float-1 z-15">
            <img
              src="/assets/images/cube_2.png"
              alt="3D Cube"
              class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 xl:w-28 xl:h-28 2xl:w-32 2xl:h-32 cube-blue-4 opacity-80"
              loading="lazy"
              decoding="async"
            />
          </div>

        </div>
      </div>
      </ViewportAnimator>

    </div>
  </div>
</section>


<style>
/* ——————————————————————————————————————————————
   1) HERO SECTION & FONDO
————————————————————————————————————————————— */
.hero-section {
  background: #000000;
}

/* Hero button group alignment override */
.hero-section .btn-group {
  align-items: center !important;
  justify-content: center !important;
}

@media (min-width: 1024px) {
  .hero-section .btn-group {
    align-items: flex-start !important;
    justify-content: flex-start !important;
  }
}

/* Hero background image - Enhanced responsive */
.hero-background {
  position: absolute;  /* para que el torus (z-index:1) quede encima */
  z-index: 0;          /* fondo más atrás */
  background-image: url('/assets/images/fondo_2.jpeg');
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  opacity: 0.5;
  background-attachment: scroll;
}

/* Mobile (≤767px) - overlay más oscuro */
@media (max-width: 767px) {
  .hero-background {
    opacity: 0.9;
    background-size: cover;
    background-position: center center;
    background-attachment: scroll;
  }
}
/* Tablet (≥768px) - fondo fijo y un poco más transparente */
@media (min-width: 768px) {
  .hero-background {
    background-attachment: fixed;
    opacity: 0.7;
  }
}

/* ——————————————————————————————————————————————
   2) MOBILE OPTIMIZATIONS (≤499px)
————————————————————————————————————————————— */
@media (max-width: 499px) {
  /* Fondo: ajustes extra para móviles muy pequeños */
  .hero-background {
    background-attachment: scroll;
    background-position: center center;
    background-size: cover;
    filter: brightness(1.2) contrast(1.2) saturate(1.1);
    opacity: 0.7;
  }

  /* Hero ocupa toda la pantalla (100svh) */
  .hero-section {
    min-height: 100vh;
    min-height: 100svh;
  }

  /* Sombra de texto más intensa para legibilidad */
  .hero-section h1 {
    text-shadow: 0 3px 12px rgba(0, 0, 0, 0.9);
  }
  .hero-section p {
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  }

  /* Floating shapes (si existieran) */
  .floating-shapes {
    opacity: 0.18;
  }
  .floating-cube img {
    width: 50px;
    height: 50px;
    opacity: 1;
  }
}

/* Tablet (500-767px) - ajustes intermedios para fondo y altura */
@media (min-width: 500px) and (max-width: 767px) {
  .hero-background {
    background-attachment: scroll;
    background-position: center center;
    background-size: cover;
    filter: brightness(1.1) contrast(1.1);
  }
  .hero-section {
    min-height: 100svh;
  }
}

/* ——————————————————————————————————————————————
   3) BOTTOM BLUR PARA INTEGRACIÓN CON FOOTER
————————————————————————————————————————————— */
.hero-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120px;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 1) 0%,
    rgba(0, 0, 0, 0.95) 20%,
    rgba(0, 0, 0, 0.8) 40%,
    rgba(0, 0, 0, 0.6) 60%,
    rgba(0, 0, 0, 0.3) 80%,
    transparent 100%
  );
  z-index: 25;
  pointer-events: none;
}
.hero-section::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80px;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.9) 0%,
    rgba(0, 0, 0, 0.7) 30%,
    rgba(0, 0, 0, 0.4) 60%,
    transparent 100%
  );
  backdrop-filter: blur(2px);
  z-index: 24;
  pointer-events: none;
}
@media (max-width: 640px) {
  .hero-section::after {
    height: 80px;
  }
  .hero-section::before {
    height: 60px;
    backdrop-filter: blur(1px);
  }
}
@media (min-width: 1024px) {
  .hero-section::after {
    height: 150px;
  }
  .hero-section::before {
    height: 100px;
    backdrop-filter: blur(3px);
  }
}

/* ——————————————————————————————————————————————
   4) FLOATING BACKGROUND SHAPES (SI EXISTIERAN)
————————————————————————————————————————————— */
.floating-shapes {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.12;
}
.floating-cube {
  position: absolute;
  animation-duration: 20s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}
.floating-cube img {
  width: 80px;
  height: 80px;
  opacity: 0.8;
}

@media (max-width: 640px) {
  .floating-shapes {
    opacity: 0.15;
  }
  .floating-cube img {
    width: 60px;
    height: 60px;
    opacity: 0.9;
  }
}
@media (min-width: 641px) and (max-width: 768px) {
  .floating-cube img {
    width: 70px;
    height: 70px;
  }
}
@media (min-width: 769px) and (max-width: 1024px) {
  .floating-cube img {
    width: 90px;
    height: 90px;
  }
}

/* ——————————————————————————————————————————————
   5) SHAPES CLUSTER COMPACTO (CUBOS 3D)
————————————————————————————————————————————— */
.shapes-cluster-compact {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Responsive sizes para el cluster compacto - MUCHO MÁS GRANDES */
@media (min-width: 768px) {
  .shapes-cluster-compact {
    width: 384px;  /* 96 * 4 - Tablet */
    height: 384px;
  }
}
@media (min-width: 1024px) {
  .shapes-cluster-compact {
    width: 448px;  /* 28rem - Desktop */
    height: 448px;
  }
}
@media (min-width: 1280px) {
  .shapes-cluster-compact {
    width: 512px;  /* 32rem - XL */
    height: 512px;
  }
}
@media (min-width: 1536px) {
  .shapes-cluster-compact {
    width: 576px;  /* 36rem - 2XL */
    height: 576px;
  }
}

.cube-1 {
  top: 10%;
  left: 5%;
  animation-name: float-diagonal-1;
  animation-delay: 0s;
}
.cube-2 {
  top: 20%;
  right: 10%;
  animation-name: float-diagonal-2;
  animation-delay: -3s;
}
.cube-3 {
  top: 60%;
  left: 15%;
  animation-name: float-vertical;
  animation-delay: -6s;
}
.cube-5 {
  top: 70%;
  left: 8%;
  animation-name: float-diagonal-1;
  animation-delay: -12s;
}
.cube-6 {
  bottom: 20%;
  right: 8%;
  animation-name: float-diagonal-2;
  animation-delay: -15s;
}
.cube-7 {
  top: 15%;
  left: 50%;
  animation-name: float-vertical;
  animation-delay: -18s;
}
.cube-8 {
  bottom: 15%;
  left: 45%;
  animation-name: float-horizontal;
  animation-delay: -21s;
}

/* Main cluster animations (flotantes) - Compactas y suaves */
@keyframes float-1 {
  0%, 100% {
    transform: translate(-50%, -50%) translateY(0px) translateX(0px) rotate(0deg) scale(1);
  }
  25% {
    transform: translate(-50%, -50%) translateY(-4px) translateX(2px) rotate(30deg) scale(1.03);
  }
  50% {
    transform: translate(-50%, -50%) translateY(-3px) translateX(0px) rotate(60deg) scale(1.05);
  }
  75% {
    transform: translate(-50%, -50%) translateY(-5px) translateX(-2px) rotate(90deg) scale(1.03);
  }
}
@keyframes float-2 {
  0%, 100% {
    transform: translate(-50%, -50%) translateY(0px) rotate(0deg) scale(1);
  }
  20% {
    transform: translate(-50%, -50%) translateY(-8px) rotate(40deg) scale(1.06);
  }
  40% {
    transform: translate(-50%, -50%) translateY(-4px) rotate(80deg) scale(0.98);
  }
  60% {
    transform: translate(-50%, -50%) translateY(-10px) rotate(120deg) scale(1.08);
  }
  80% {
    transform: translate(-50%, -50%) translateY(-3px) rotate(160deg) scale(1.02);
  }
}
@keyframes float-3 {
  0%, 100% {
    transform: translate(-50%, -50%) translateY(0px) translateX(0px) rotate(0deg) scale(1);
  }
  33% {
    transform: translate(-50%, -50%) translateY(-6px) translateX(3px) rotate(60deg) scale(1.04);
  }
  66% {
    transform: translate(-50%, -50%) translateY(-8px) translateX(-2px) rotate(120deg) scale(0.96);
  }
}
@keyframes float-4 {
  0%, 100% {
    transform: translate(-50%, -50%) translateY(0px) rotate(0deg) scale(1);
  }
  30% {
    transform: translate(-50%, -50%) translateY(-12px) rotate(50deg) scale(1.1);
  }
  70% {
    transform: translate(-50%, -50%) translateY(-6px) rotate(100deg) scale(1.04);
  }
}

.animate-float-1 {
  animation: float-1 12s ease-in-out infinite;
  animation-delay: -3s;
}
.animate-float-2 {
  animation: float-2 10s ease-in-out infinite;
  animation-delay: -2.5s;
}
.animate-float-3 {
  animation: float-3 14s ease-in-out infinite;
  animation-delay: -7s;
}
.animate-float-4 {
  animation: float-4 11s ease-in-out infinite;
  animation-delay: -1.5s;
}

/* Estilos específicos para cada cubo */
.cube-blue-1 {
  filter: drop-shadow(0 8px 16px rgba(59, 130, 246, 0.3));
}
.cube-blue-2 {
  filter: drop-shadow(0 6px 12px rgba(37, 99, 235, 0.25));
}
.cube-blue-3 {
  filter: drop-shadow(0 4px 8px rgba(29, 78, 216, 0.2));
}
.cube-blue-4 {
  filter: drop-shadow(0 3px 6px rgba(30, 64, 175, 0.15));
}

/* Responsive adjustments for shapes-cluster-compact */
@media (max-width: 640px) {
  .shapes-cluster-compact {
    width: 200px !important;
    height: 200px !important;
  }

  /* Animaciones simplificadas para móviles */
  @keyframes float-1 {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px) translateX(0px) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-3px) translateX(0px) rotate(90deg) scale(1.02);
    }
  }
  @keyframes float-2 {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-5px) rotate(90deg) scale(1.04);
    }
  }
  @keyframes float-3 {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px) translateX(0px) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-4px) translateX(2px) rotate(90deg) scale(1.03);
    }
  }
  @keyframes float-4 {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-6px) rotate(90deg) scale(1.05);
    }
  }
}

/* ——————————————————————————————————————————————
   6) TORUS (MÓVIL <768px) – MÁS OPACO Y CENTRADO
————————————————————————————————————————————— */
.mobile-torus-background {
  position: absolute;
  inset: 0;           /* ocupa TODO el hero */
  pointer-events: none;
  z-index: 5;         /* por encima del fondo (z-0), pero por debajo del contenedor (z-10) */
  display: block;     /* asegurar que esté visible */
}
.torus-floating {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: torus-float 15s ease-in-out infinite;
}
.torus-image {
  width: 400px;
  height: 400px;
  opacity: 0.55;     /* Aumentado para mejor visibilidad */
  filter: blur(0.5px);
  transform-origin: center;
  display: block;    /* asegurar que la imagen esté visible */
}
/* Si la pantalla es <400px, hacemos el Torus más pequeño pero visible */
@media (max-width: 400px) {
  .torus-image {
    width: 300px !important;
    height: 300px !important;
    opacity: 0.5 !important;
    filter: blur(1px) !important;
  }
}
/* Para pantallas entre 400px y 640px */
@media (min-width: 400px) and (max-width: 640px) {
  .torus-image {
    width: 350px;
    height: 350px;
    opacity: 0.40;
    filter: blur(0.8px);
  }
}
/* Animación flotante del Torus */
@keyframes torus-float {
  0% {
    transform: translate(-50%, -50%) rotate(0deg) scale(1);
    opacity: 0.8;
  }
  25% {
    transform: translate(-48%, -52%) rotate(90deg) scale(1.05);
    opacity: 0.8;
  }
  50% {
    transform: translate(-52%, -48%) rotate(180deg) scale(0.95);
    opacity: 0.8;
  }
  75% {
    transform: translate(-50%, -54%) rotate(270deg) scale(1.02);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg) scale(1);
    opacity: 0.8;
  }
}
/* En tablets y desktop, ocultamos el Torus */
@media (min-width: 768px) {
  .mobile-torus-background {
    display: none !important;
  }
}

