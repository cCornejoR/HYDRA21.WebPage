<script>
  // Enhanced interactivity
  document.addEventListener('DOMContentLoaded', () => {
    // Parallax effect for background elements
    const hero = document.querySelector('#hero');
    const backgroundElements = hero?.querySelectorAll('.absolute');
    
    if (hero && backgroundElements && backgroundElements.length > 0 && window.innerWidth > 768) {
      let ticking = false;
      
      function updateParallax() {
        const scrolled = window.scrollY;
        const rate = scrolled * -0.3;

        backgroundElements?.forEach((el, index) => {
          if (el.classList.contains('bg-gradient-to-br') ||
              el.classList.contains('bg-blue-500/15') ||
              el.classList.contains('bg-cyan-400/15') ||
              el.classList.contains('bg-blue-400/15')) {
            const speed = (index + 1) * 0.15;
            (el as HTMLElement).style.transform = `translateY(${rate * speed}px)`;
          }
        });

        ticking = false;
      }
      
      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      }
      
      window.addEventListener('scroll', requestTick);
    }
    
    // Button hover effects
    const buttons = document.querySelectorAll('button');
    buttons.forEach(button => {
      button.addEventListener('mouseenter', () => {
        button.style.transform = 'scale(1.05) translateY(-2px)';
      });
      
      button.addEventListener('mouseleave', () => {
        button.style.transform = 'scale(1) translateY(0)';
      });
    });

    // Enhanced Culvert SVG Interactions with Realistic Water Animation
    const culvertSvg = document.querySelector('.culvert-svg');
    if (culvertSvg && culvertSvg.parentElement) {
      // Add realistic water flow animation on hover
      culvertSvg.addEventListener('mouseenter', () => {
        // Create animated water particles with more realistic physics
        for (let i = 0; i < 8; i++) {
          setTimeout(() => {
            const waterParticle = document.createElement('div');
            const randomSize = Math.random() * 3 + 2; // 2-5px
            const randomDelay = Math.random() * 0.5;
            const randomVerticalOffset = Math.random() * 10 - 5; // -5 to 5px
            
            waterParticle.style.cssText = `
              position: absolute;
              width: ${randomSize}px;
              height: ${randomSize}px;
              background: radial-gradient(circle, #3b82f6, #1d4ed8);
              border-radius: 50%;
              pointer-events: none;
              animation: realisticWaterFlow ${2.8 + randomDelay}s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
              top: calc(45% + ${randomVerticalOffset}px);
              left: 35%;
              z-index: 20;
              opacity: 0;
              box-shadow: 
                0 0 4px rgba(59, 130, 246, 0.6),
                0 0 8px rgba(59, 130, 246, 0.4),
                inset 0 0 2px rgba(255, 255, 255, 0.3);
            `;
            
            culvertSvg.parentElement?.appendChild(waterParticle);
            setTimeout(() => waterParticle.remove(), 3300);
          }, i * 250);
        }
      });
    }

    // Add CSS animation for realistic water particles
    const waterAnimationStyle = document.createElement('style');
    waterAnimationStyle.textContent = `
      @keyframes realisticWaterFlow {
        0% {
          opacity: 0;
          transform: translateX(0) translateY(0) scale(0.3);
          box-shadow: 
            0 0 4px rgba(59, 130, 246, 0.6),
            0 0 8px rgba(59, 130, 246, 0.4),
            inset 0 0 2px rgba(255, 255, 255, 0.3);
        }
        5% {
          opacity: 0.8;
          transform: translateX(15px) translateY(-3px) scale(1);
        }
        15% {
          opacity: 1;
          transform: translateX(45px) translateY(-6px) scale(1.1);
          box-shadow: 
            0 0 6px rgba(59, 130, 246, 0.8),
            0 0 12px rgba(59, 130, 246, 0.6),
            inset 0 0 3px rgba(255, 255, 255, 0.4);
        }
        35% {
          opacity: 0.95;
          transform: translateX(120px) translateY(2px) scale(1);
          box-shadow: 
            0 0 5px rgba(59, 130, 246, 0.7),
            0 0 10px rgba(59, 130, 246, 0.5),
            inset 0 0 2px rgba(255, 255, 255, 0.3);
        }
        55% {
          opacity: 0.85;
          transform: translateX(180px) translateY(8px) scale(0.9);
          box-shadow: 
            0 0 4px rgba(59, 130, 246, 0.6),
            0 0 8px rgba(59, 130, 246, 0.4);
        }
        75% {
          opacity: 0.6;
          transform: translateX(240px) translateY(15px) scale(0.7);
          box-shadow: 
            0 0 3px rgba(59, 130, 246, 0.5),
            0 0 6px rgba(59, 130, 246, 0.3);
        }
