                      <rect x="14" y="4.3" width="4" height="2" fill="#0f172a" opacity="0.9" rx="0.3"/>
                      <text x="16" y="5.6" fill="#3b82f6" font-size="2" font-weight="bold"
                            text-anchor="middle" font-family="Arial, sans-serif">8.0m</text>
                    </g>

                    <!-- Enhanced Construction/Reference Lines -->
                    <g class="construction-lines" stroke="#64748b" stroke-width="0.2" opacity="0.4">
                      <!-- Vertical reference lines -->
                      <line x1="8" y1="41" x2="8" y2="2" stroke-dasharray="3,2"/>
                      <line x1="72" y1="41" x2="72" y2="32" stroke-dasharray="3,2"/>
                      <line x1="13" y1="1" x2="13" y2="2" stroke-dasharray="3,2"/>
                      <line x1="51" y1="1" x2="51" y2="2" stroke-dasharray="3,2"/>
                      <!-- Horizontal reference lines -->
                      <line x1="74.5" y1="2" x2="75.5" y2="2" stroke-dasharray="3,2"/>
                      <line x1="74.5" y1="32" x2="75.5" y2="32" stroke-dasharray="3,2"/>
                    </g>

                    <!-- Dimension Line Breaks (where lines cross objects) -->
                    <g class="line-breaks">
                      <rect x="39" y="44.2" width="2" height="0.6" fill="#0f172a"/>
                      <rect x="77.2" y="16" width="0.6" height="2" fill="#0f172a"/>
                    </g>
                  </g>
                </g>
              </svg>

                        
          <!-- Enhanced Technical Specifications Panel -->
            <div class="culvert-specs absolute top-full left-1/2 transform -translate-x-1/2 mt-6 sm:mt-8 w-full max-w-sm sm:max-w-md opacity-0 scale-95 transition-all duration-500 hidden md:block">
